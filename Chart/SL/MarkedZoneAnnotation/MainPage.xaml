<UserControl x:Class="MarkedZoneAnnotation.MainPage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
			 xmlns:local="clr-namespace:MarkedZoneAnnotation"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400"
			 MinHeight="450"
			 MinWidth="700">
	<Grid>
		<telerik:RadTabControl>
			<telerik:RadTabItem Header="Horizontal marked zones">
				<local:HorizontalMarkedZones />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="Overlapping marked zones">
				<local:OverlappingMarkedZones />
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="Styling marked zones">
				<local:StylingMarkedZones />
			</telerik:RadTabItem>
		</telerik:RadTabControl>
	</Grid>
</UserControl>
