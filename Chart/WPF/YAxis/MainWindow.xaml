<Window x:Class="YAxis.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
		xmlns:local="clr-namespace:YAxis"
		Title="MainWindow"
		Height="450"
		Width="700">
	<Grid>
		<TabControl>
			<TabItem Header="ExtendDirection.Down">
				<local:ExtendDirectionDown />
			</TabItem>
			
			<TabItem Header="ExtendDirection.Up">
				<local:ExtendDirectionUp />
			</TabItem>
			
			<TabItem Header="ExtendDirection.Both">
				<local:ExtendDirectionBoth />
			</TabItem>
			
			<TabItem Header="ExtendDirection.Smart">
				<local:ExtendDirectionSmart />
			</TabItem>
			
			<TabItem Header="ExtendDirection.None">
				<local:ExtendDirectionNone />
			</TabItem>
		</TabControl>
	</Grid>
</Window>
