<Window x:Class="LayoutMode.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
		xmlns:local="clr-namespace:LayoutMode"
		Title="MainWindow"
		Height="350"
		Width="525">
	<Grid>
		<TabControl>
			<TabItem Header="LayoutMode.Normal">
				<local:LayoutModeNormal />
			</TabItem>
			
			<TabItem Header="LayoutMode.Inside">
				<local:LayoutModeInside />
			</TabItem>
			
			<TabItem Header="LayoutMode.Between">
				<local:LayoutModeBetween />
			</TabItem>
			
			<TabItem Header="LayoutMode.Auto">
				<local:LayoutModeAuto />
			</TabItem>
		</TabControl>
	</Grid>
</Window>
