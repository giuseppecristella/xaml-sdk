<Window x:Class="ScrollModes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="MainWindow"
		Height="600"
		Width="800">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<GroupBox Header="ScrollMode is set to ScrollAndZoom"
				  Grid.Row="0"
				  Padding="10,10,10,0"
				  Margin="0,20,0,0">
			<telerik:RadTimeBar ScrollMode="ScrollAndZoom"
                                PeriodStart="2011-01-01"
                                PeriodEnd="2012-01-01"
                                VisiblePeriodStart="2011-01-01"
                                VisiblePeriodEnd="2011-02-01"
                                SelectionStart="2011-01-01"
                                SelectionEnd="2011-01-15">
				<telerik:RadTimeBar.Intervals>
					<telerik:YearInterval />
					<telerik:MonthInterval />
					<telerik:WeekInterval />
					<telerik:DayInterval />
				</telerik:RadTimeBar.Intervals>
			</telerik:RadTimeBar>
		</GroupBox>

		<GroupBox Header="ScrollMode is set to ScrollOnly"
				  Grid.Row="1"
				  Padding="10,10,10,0"
				  Margin="0,20,0,0">
			<telerik:RadTimeBar ScrollMode="ScrollOnly"
                                PeriodStart="2011-01-01"
                                PeriodEnd="2012-01-01"
                                VisiblePeriodStart="2011-01-01"
                                VisiblePeriodEnd="2011-02-01"
                                SelectionStart="2011-01-01"
                                SelectionEnd="2011-01-15">
				<telerik:RadTimeBar.Intervals>
					<telerik:YearInterval />
					<telerik:MonthInterval />
					<telerik:WeekInterval />
					<telerik:DayInterval />
				</telerik:RadTimeBar.Intervals>
			</telerik:RadTimeBar>
		</GroupBox>

		<GroupBox Header="ScrollMode is set to None"
				  Grid.Row="2"
				  Padding="10,10,10,0"
				  Margin="0,20,0,0">
			<telerik:RadTimeBar ScrollMode="None"
                                PeriodStart="2011-01-01"
                                PeriodEnd="2012-01-01"
                                VisiblePeriodStart="2011-01-01"
                                VisiblePeriodEnd="2011-02-01"
                                SelectionStart="2011-01-01"
                                SelectionEnd="2011-01-15">
				<telerik:RadTimeBar.Intervals>
					<telerik:YearInterval />
					<telerik:MonthInterval />
					<telerik:WeekInterval />
					<telerik:DayInterval />
				</telerik:RadTimeBar.Intervals>
			</telerik:RadTimeBar>
		</GroupBox>
	</Grid>
</Window>
