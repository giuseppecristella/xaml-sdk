<Window x:Class="DataBarProperties.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="MainWindow"
		Height="350"
		Width="525">
	<StackPanel VerticalAlignment="Center">
		<telerik:RadDataBar Grid.Row="0" Height="20" Value="50" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="1" Height="20" Value="50" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="2" Height="20" Value="60" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="3" Height="20" Value="120" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="4" Height="20" Value="20" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="5" Height="20" Value="10" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="6" Height="20" Value="-10" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
		<telerik:RadDataBar Grid.Row="7" Height="20" Value="-100" OriginValue="30" BorderBrush="Gray" BorderThickness="1" Margin="2" />
	</StackPanel>
</Window>
