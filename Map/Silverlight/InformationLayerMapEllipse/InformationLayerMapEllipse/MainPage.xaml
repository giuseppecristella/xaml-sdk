            <telerik:RadMap.Provider>
                <telerik:OpenStreetMapProvider />
            </telerik:RadMap.Provider>
            <telerik:InformationLayer>
                <telerik:MapEllipse Location="42.6957539183824, 23.3327663758679"
                                    Width="20"
                                    Height="20"
                                    Fill="#7FFFFF00"
                                    Stroke="Red"
                                    StrokeThickness="2" />
