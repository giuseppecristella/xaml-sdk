<UserControl x:Class="Colorizers.MainPage"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="clr-namespace:Colorizers"
			 xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
			 mc:Ignorable="d"
			 d:DesignHeight="300"
			 d:DesignWidth="400">
    <Grid x:Name="LayoutRoot" Background="White">
		<telerik:RadTabControl>
			<telerik:RadTabItem Header="ValueGradientColorizer">
				<local:ValueGradientColorizerExample/>
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ValueBrushColorizer (absolute colors)">
				<local:ValueBrushColorizerExampleAbsolute/>
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="ValueBrushColorizer (relative colors)">
				<local:ValueBrushColorizerExample_Relative/>
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="DesaturationColorizer">
				<local:DesaturationColorizerExample/>
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="PaletteColorizer">
				<local:PaletteColorizerExample/>
			</telerik:RadTabItem>

			<telerik:RadTabItem Header="BrushColorizer">
				<local:BrushColorizer/>
			</telerik:RadTabItem>
		</telerik:RadTabControl>
    </Grid>
</UserControl>
